<main class="chats">
    <aside class="chats__aside">
        {{> Link }}
        {{> Search }}
        {{!-- TODO Adjust scrollbar --}}
        <nav>
            {{> ChatsList }}
        </nav>
    </aside>

    <section class="chat">
        <header class="chat-header">
            <div class="chat-header__details">
                <div class="chat-header__avatar">
                    <img 
                        src="../../../assets/avatar.png"
                        alt="User Avatar"
                        width="34px"
                        height="34px"
                    >
                </div>
                <h3 class="chat-header__name">Вадим</h3>
            </div>
            <button class="chat__button" type="button">
                {{> OptionsIcon }}
            </button>
        </header>


        <div class="chat-main">
            Body    
        </div>


        <footer class="chat-footer">
            <button class="chat__button" type="button">
                {{> PinIcon }}
            </button>

            <input 
                class="chat-footer__input" 
                type="text" 
                name="message"
                placeholder="Message"
            >

            <button class="chat__button" type="button">
                {{> ArrowIcon }}
            </button>
        </footer>
    </section>
</main>