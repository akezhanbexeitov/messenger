<main class="profile">
    <aside class="profile-aside" page="chats">
        {{> 
            ArrowIcon 
                class="icons_left"
        }}
    </aside>

    <section class="profile-main">
        {{> Avatar }}
        
        {{> 
            Field
                name="email"
                label="Email"
                type="email"
                env="profile"
                placeholder="pochta@yandex.ru"
        }}
        {{>
            Field
                name="login"
                label="Login"
                type="text"
                env="profile"
                placeholder="ivanivanov"
        }}
        {{>
            Field
                name="first_name"
                label="First Name"
                type="text"
                env="profile"
                placeholder="Ivan"
        }}
        {{>
            Field
                name="second_name"
                label="Second Name"
                type="text"
                env="profile"
                placeholder="Ivanov"
        }}
        {{>
            Field
                name="display_name"
                label="Display Name"
                type="text"
                env="profile"
                placeholder="Ivan"
        }}
        {{>
            Field
                name="phone"
                label="Phone Number"
                type="text"
                env="profile"
                placeholder="+7(909)9673030"
        }}
    </section>
</main>
