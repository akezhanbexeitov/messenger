<main class="profile">
    {{{ BackAside onClick=handleBackClick }}}

    <section class="profile-main">
        {{#if user}}
            {{{ Avatar }}}

            <h1 class="profile-main__name">{{ user.firstName }}</h1>
            
            {{{ 
                Field
                    name="email"
                    label="Email"
                    type="email"
                    env="profile"
                    placeholder=user.email
                    disabled="true"
            }}}

            {{{
                Field
                    name="login"
                    label="Login"
                    type="text"
                    env="profile"
                    placeholder=user.login
                    disabled="true"
            }}}

            {{{
                Field
                    name="first_name"
                    label="First Name"
                    type="text"
                    env="profile"
                    placeholder=user.firstName
                    disabled="true"
            }}}

            {{{
                Field
                    name="second_name"
                    label="Second Name"
                    type="text"
                    env="profile"
                    placeholder=user.secondName
                    disabled="true"
            }}}

            {{{
                Field
                    name="display_name"
                    label="Display Name"
                    type="text"
                    env="profile"
                    placeholder=user.displayName
                    disabled="true"
            }}}
            {{!-- TODO Fix number representation --}}
            {{!-- TODO Remove input backgrounds when disabled --}}
            {{{
                Field
                    name="phone"
                    label="Phone Number"
                    type="text"
                    env="profile"
                    placeholder=user.phone
                    disabled="true"
            }}}

        {{else}}

            {{{ Loader }}}

        {{/if}}

        {{{ 
            Button
                text="Change profile"
                env="profile"
                onClick=handleChangeProfile
        }}}

        {{{
            Button
                text="Change password"
                env="profile"
                onClick=handleChangePassword
        }}}

        {{{
            Button
                text="Logout"
                env="profile"
                danger="true"
                onClick=handleLogout
        }}}
    </section>
</main>
