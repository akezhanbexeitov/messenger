<main class="profile">
    <aside class="profile-aside" page="chats">
        {{> 
            ArrowIcon 
                class="icons_left"
        }}
    </aside>

    <section class="profile-main">
        {{> Avatar }}

        <h1 class="profile-main__name">Ivan</h1>
        
        {{> 
            Field
                name="email"
                label="Email"
                type="email"
                env="profile"
                placeholder="pochta@yandex.ru"
        }}
        {{>
            Field
                name="login"
                label="Login"
                type="text"
                env="profile"
                placeholder="ivanivanov"
        }}
        {{>
            Field
                name="first_name"
                label="First Name"
                type="text"
                env="profile"
                placeholder="Ivan"
        }}
        {{>
            Field
                name="second_name"
                label="Second Name"
                type="text"
                env="profile"
                placeholder="Ivanov"
        }}
        {{>
            Field
                name="display_name"
                label="Display Name"
                type="text"
                env="profile"
                placeholder="Ivan"
        }}
        {{!-- TODO Fix number representation --}}
        {{>
            Field
                name="phone"
                label="Phone Number"
                type="text"
                env="profile"
                placeholder="+7(909)9673030"
        }}

        <button 
            class="profile-main__button"
            type="button"
        >
            Change profile
        </button>

        <button 
            class="profile-main__button" 
            type="button"
        >
            Change password
        </button>

        <button 
            class="profile-main__button profile-main__button_danger" 
            type="button"
        >
            Logout
        </button>
    </section>
</main>
