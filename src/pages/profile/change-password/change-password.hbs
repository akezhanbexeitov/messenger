<main class="profile">
    <aside class="profile-aside" page="profile">
        {{>
            ArrowIcon
                class="icons_left"
        }}
    </aside>

    <section class="profile-main">
        {{> Avatar }}

        {{>
            Field
                name="oldPassword"
                label="Old password"
                type="password"
                env="profile"
                placeholder="Password"
        }}
        {{>
            Field
                name="newPassword"
                label="New password"
                type="password"
                env="profile"
                placeholder="Password"
        }}
        {{>
            Field
                name="repeatNewPassword"
                label="Repeat new password"
                type="password"
                env="profile"
                placeholder="Password"
        }}

        {{>
            Button 
                primary="true"
                text="Save Changes"
        }}
    </section>
</main>
