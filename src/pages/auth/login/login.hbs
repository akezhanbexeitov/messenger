<main class="auth">
    <form class="auth__form auth__form_login">
        <div class="auth__fields">
            {{{ Title text="Login" }}}
            
            {{{
                Field
                    name="login"
                    label="Username"
                    type="text"
                    env="auth"
                    ref="login"
                    validate=validate.login
            }}}

            {{{
                Field
                    name="password"
                    label="Password"
                    type="password"
                    env="auth"
                    ref="password"
                    validate=validate.password
            }}}
        </div>

        <div class="auth__buttons">
            <div style="text-align: center; margin-bottom: 12px">
                {{{ ErrorText error=error ref="errorText" }}}
            </div>

            {{{
                Button
                    primary="true"
                    text="Login"
                    type="submit"
                    onClick=handleLogin
            }}}
            
            {{{
                Button
                    text="Register"
                    type="button"
                    onClick=handleRegister
            }}}
        </div>
    </form>
</main>
